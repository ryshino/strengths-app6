<h1>ログイン</h1>

<%= form_with scope: :session, url:login_path, local: true do |f| %>
  <%= flash[:danger] %>

  <%= f.label :profile, 'URL' %>
  <%= f.text_field :profile %>

  <%= f.label :password, 'パスワード(6文字以上)' %>
  <%= f.password_field :password %>

  <%= f.submit 'ログイン' %>
<% end %>

<%= link_to "新規登録", new_user_path %>